---
import { Image } from "astro:assets";
import Layout from "../../layouts/Layout.astro";

const images = await Astro.glob("../../images/gallery/birds/*").then(
  (files) => {
    const images = files.map((file) => {
      const src = file.default.src;
      const parts = src.split("/");
      const filename = parts[parts.length - 1];
      const nameWithoutExtension = filename.split(".")[0];
      const nameWithSpaces = nameWithoutExtension.replace(/_/g, " ");
      return {
        ...file.default,
        name: nameWithSpaces,
      };
    });
    return images;
  }
);
---

<Layout title="Welcome to Astro.">
  <div class="gallery-ctn">
    <h1 class="gallery-bird-title">Galer√≠a de Aves</h1>
    <div class="gallery-bird-ctn">
      {
        images.map((image, index) => (
          <div class="gallery-img-ctn">
            <h3 class="gallery-img-title">{image.name}</h3>
            {index === 0 ? (
              <Image
                class="gallery-img"
                src={image}
                alt={image.name}
                loading="lazy"
                width="480"
                height="300"
                transition:name="gallery-bird"
              />
            ) : (
              <Image
                class="gallery-img"
                src={image}
                alt={image.name}
                loading="lazy"
                width="480"
                height="300"
              />
            )}
          </div>
        ))
      }
    </div>
  </div>
</Layout>

<style>
  .gallery-ctn {
    width: 100%;
    background-color: #3fb54b;
