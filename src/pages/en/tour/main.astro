---
import { Image } from "astro:assets";
import Layout from "../../../layouts/Layout.astro";
import image from "../../../images/tour_main.jpg";
import CardItinerary from "../../../components/tour/CardItinerary.astro";
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const arrayItinerary = new Array(16).fill("");
const DAY = t(`tours.day`);
const TITLE = t(`tours.main.title`);
//@ts-ignore
const getInfo = (index) => t(`tours.main.info-${index}`);
//@ts-ignore
const getUbi = (index) => t(`tours.main.ubication-${index}`);
---

<Layout title="Welcome to Astro." transition:animate="none">
  <div class="w-full bg-white pb-16 pt-24">
    <div class="w-full flex">
      <div class="w-full px-6 md:max-w-[956px] md:mx-auto">
        <div class="relative float-left mb-3 md:mb-0">
          <Image
            class="w-full h-full object-cover brightness-50 rounded-md shadow-lg md:max-w-[500px] md:min-w-[500px] md:mr-4"
            src={image}
            alt="Tour main"
            transition:name="tour-main"
          />

          <h1
            class="absolute z-10 text-3xl text-slate-50 text-center top-1/2 left-1/2 -translate-y-1/2 -translate-x-1/2 md:text-5xl"
          >
            Northen Per√∫
          </h1>
        </div>

        <p
          class="text-neutral-900 leading-relaxed text-lg whitespace-pre-line md:px-0 md:text-xl"
        >
          {TITLE}
        </p>
      </div>
    </div>

    <div
      class="w-5/6 mx-auto d-flex justify-content-center align-items-center flex-column mt-10 md:w-2/4"
    >
      <ul
        aria-label="Colored activity feed"
        role="feed"
        class="relative flex flex-col gap-8 pl-6 before:absolute before:top-0 before:left-6 before:h-full before:border before:-translate-x-1/2 before:border-slate-200 after:absolute after:top-6 after:left-6 after:bottom-6 after:border after:-translate-x-1/2 after:border-slate-200"
      >
        {
          arrayItinerary.map((_, index) => (
            <CardItinerary
              title={DAY + " " + index}
              info={getInfo(index)}
              ubication={getUbi(index)}
            />
          ))
        }
      </ul>
    </div>
  </div>
</Layout>
