---
interface Props {
  title: string;
  description: string;
}
const { title, description } = Astro.props;
---

<div id="modal-content" class="modal-content">
  <div class="modal-info">
    <button class="modal-close">X</button>
    <h3 class="modal-title">{title}</h3>
    <p class="modal-description">{description}</p>
  </div>
</div>

<style>
  .modal-content {
    width: 100%;
    height: 100%;
    position: fixed;
    display: none;
    z-index: 60;
    justify-content: center;
    align-items: center;
    opacity: 0;
    background-color: rgba(0, 0, 0, 0.65);
    transition: opacity .5s;
  }

  .modal-info {
    border-radius: 16px;
    background-color: #eee;
    width: 400px;
    height: 400px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    box-sizing: border-box;
  }

  .modal-close {
    width: 24px;
    height: 24px;
    margin-left: auto;
  }

  .modal-title {
    font-size: 3rem;
    text-align: center;
  }

  .modal-description {
    font-size: 2rem;
  }
</style>
