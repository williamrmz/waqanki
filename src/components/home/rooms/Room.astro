---
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from "../../../i18n/utils";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface Props {
  cardIndex: string;
  src: ImageMetadata;
  price: string;
}
const { cardIndex, src, price } = Astro.props;

//@ts-ignore
const ROOM_TEXT = t(`home.rooms.room-${cardIndex}`);
---

<div class="room-card">
  <Image src={src} alt={ROOM_TEXT} class="room-card-bg" />
</div>

<style>
  .room-card {
    flex: 1 0 100%;
    display: grid;
    place-items: center;
    overflow: hidden;
    position: relative;
  }

  .room-card-bg {
    width: 100%;
    height: 100%;
  }

</style>
