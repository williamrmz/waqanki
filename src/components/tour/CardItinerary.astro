---
import Point from "../../components/sources/Point.astro";

interface Props {
  title: string;
  info: string;
  ubication: string;
}

const { title, info, ubication } = Astro.props;
---

<li role="article" class="relative pl-8">
  <span
    class="absolute left-0 top-0.5 z-10 flex items-center justify-center w-12 h-12 text-white -translate-x-1/2 rounded-full ring-2 ring-white bg-emerald-500"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="36"
      height="36"
      viewBox="0 0 24 24"
      ><path
        fill="currentColor"
        d="M12 22q-2.075 0-3.9-.788t-3.175-2.137q-1.35-1.35-2.137-3.175T2 12q0-2.075.788-3.9t2.137-3.175q1.35-1.35 3.175-2.137T12 2q1.625 0 3.075.475T17.75 3.8L16.3 5.275q-.95-.6-2.025-.938T12 4Q8.675 4 6.337 6.337T4 12q0 3.325 2.337 5.663T12 20q3.325 0 5.663-2.337T20 12q0-.45-.05-.9t-.15-.875L21.425 8.6q.275.8.425 1.65T22 12q0 2.075-.788 3.9t-2.137 3.175q-1.35 1.35-3.175 2.138T12 22Zm-1.4-5.4l-4.25-4.25l1.4-1.4l2.85 2.85l10-10.025l1.4 1.4L10.6 16.6Z"
      ></path></svg
    >
  </span>
  <div class="flex flex-col flex-1 gap-5">
    <h4 class="text-5xl font-medium text-slate-700">{title}</h4>
    <p class="text-3xl text-slate-500">{info}</p>
    <p class="text-2xl text-slate-500 flex items-center">
      <Point />
      {ubication}
    </p>
  </div>
</li>
